<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">

<head>
  <script src="../js/color-modes.js"></script>
  <link rel="stylesheet" href="../bootstrap-icons-1.10.5/font/bootstrap-icons.min.css" />
  <link rel="shortcut icon" href="img/497960831_18278365864254192_6151278144709196946_n.jpeg" type="image/x-icon">

  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Edit page</title>

  <link href="../css/bootstrap.min.css" rel="stylesheet" />
  <link href="../css/sidebars.css" rel="stylesheet" />
  <link rel="stylesheet" href="../css/myStyle.css" />

  <style>
    .bd-placeholder-img {
      font-size: 1.125rem;
      text-anchor: middle;
      -webkit-user-select: none;
      -moz-user-select: none;
      user-select: none;
    }

    @media (min-width: 768px) {
      .bd-placeholder-img-lg {
        font-size: 3.5rem;
      }
    }

    .bi {
      vertical-align: -0.125em;
      fill: currentColor;
    }

    .btn-bd-primary {
      --bd-violet-bg: #712cf9;
      --bs-btn-font-weight: 600;
      --bs-btn-color: var(--bs-white);
      --bs-btn-bg: var(--bd-violet-bg);
      --bs-btn-border-color: var(--bd-violet-bg);
    }

    .bd-mode-toggle {
      z-index: 1500;
    }
  </style>
</head>

<body>
  <!-- Sidebar toggle button -->
  <div id="sidebarId" class="position-relative d-flex flex-column flex-shrink-0 p-3 text-bg-dark sidebar">
    <span class="position-absolute" style="right: 10px; top: 2px">
      <button class="btn" onclick="toggleSidebar()">
        <i class="bi bi-x-circle"></i>
      </button>
    </span>

    <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
      <i class="bi bi-lightning-charge"></i>
      <span class="fs-4 sidebar-text">Sidebar</span>
    </a>
    <hr />

    <ul class="nav nav-pills flex-column mb-auto">
      <li class="nav-item">
        <a href="/" class="nav-link text-white" aria-current="page">
          <i class="bi bi-house me-2"></i> Home
        </a>
      </li>
      <li>
        <a href="./user/add.html" class="nav-link text-white">
          <i class="bi bi-people-circle me-2"></i> Add Customers
        </a>
      </li>
    </ul>

    <hr />
    <div class="dropdown">
      <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle"
        data-bs-toggle="dropdown" aria-expanded="false">
        <img src="./img/me.JPG" alt="" width="32" height="32" class="rounded-circle me-2" />
        <strong class="sidebar-text">Arafa Mohamed</strong>
      </a>
      <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
        <li><a class="dropdown-item" href="#">New project...</a></li>
        <li><a class="dropdown-item" href="#">Settings</a></li>
        <li><a class="dropdown-item" href="#">Profile</a></li>
        <li>
          <hr class="dropdown-divider" />
        </li>
        <li><a class="dropdown-item" href="#">Sign out</a></li>
      </ul>
    </div>
  </div>

  <div class="b-example-divider b-example-vr"></div>

  <section class="w-100">
    <nav class="navbar bg-body-tertiary">
      <div class="container-fluid justify-content-center justify-content-md-between">
        <a class="navbar-brand fw-medium fs-3 mb-1 mb-md-0">Course <sup>4</sup> arab</a>
        <form class="d-flex" role="search">
          <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" />
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
      </div>
    </nav>

    <nav style="width: 88%" class="px-2 mt-4 d-flex flex-wrap justify-content-between" aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">
          <%= object.firstName %>
            <%= object.lastName %>
        </li>
      </ol>
      <p><span class="fw-medium fs-6">Id :</span>
        <%= object._id %>
      </p>
    </nav>

    <table style="width: 88%" class="ms-1 table mt-5 table-striped table-bordered">
      <tbody>
        <tr>
          <th>First Name</th>
          <td>
            <%= object.firstName %>
          </td>
        </tr>
        <tr>
          <th>Last Name</th>
          <td>
            <%= object.lastName %>
          </td>
        </tr>
        <tr>
          <th>Telephone</th>
          <td>
            <%= object.mobileNumber %>
          </td>
        </tr>
        <tr>
          <th>Email</th>
          <td>
            <%= object.email %>
          </td>
        </tr>
        <tr>
          <th>Gender</th>
          <td>
            <%= object.gender %>
          </td>
        </tr>
        <tr>
          <th>Age</th>
          <td>
            <%= object.age %>
          </td>
        </tr>
        <tr>
          <th>Country</th>
          <td>
            <%= object.country %>
          </td>
        </tr>
        <tr>
          <th>Password</th>
          <td>
            <span id="user-pass">
              <%= '‚Ä¢' .repeat(object.password.length) %>
            </span>
            <button type="button" id="toggle-user-pass" class="btn btn-sm btn-link"
              data-pass="<%= object.password %>">üëÅ</button>
          </td>
        </tr>
        <tr>
          <th>Created on</th>
          <td>
            <%= moment(object.createdAt).fromNow() %>
          </td>
        </tr>
        <tr>
          <th>Last Update</th>
          <td>
            <%= moment(object.updatedAt).fromNow() %>
          </td>
        </tr>
      </tbody>
    </table>

    <!-- Toggle password script -->
    <script>
      const btn = document.getElementById("toggle-user-pass");
      const span = document.getElementById("user-pass");

      btn.addEventListener("click", () => {
        if (span.innerText.includes("‚Ä¢")) {
          span.innerText = btn.dataset.pass;
          btn.innerText = "üôà";
        } else {
          span.innerText = "‚Ä¢".repeat(btn.dataset.pass.length);
          btn.innerText = "üëÅ";
        }
      });
    </script>
  </section>

  <script src="../js/bootstrap.bundle.min.js"></script>
  <script src="../js/sidebars.js"></script>
  <script src="../js/main.js"></script>
</body>

</html>